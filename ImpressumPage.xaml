<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:SeppApp.Properties"
             x:Class="SeppApp.ImpressumPage"
             Title="{x:Static resources:Resources.ImpressumPageTitle}"
             >
	<ScrollView>
        <Border Margin="5">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,20,20" />
            </Border.StrokeShape>
            <VerticalStackLayout Margin="5">
                <Label Margin="5" 
                       HorizontalTextAlignment="Start"
                       Text="{x:Static resources:Resources.ImpressumMainText }" 
                />
            </VerticalStackLayout>
        </Border>
        
	</ScrollView>
</ContentPage>